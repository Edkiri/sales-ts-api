{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "dist",
    "sourceMap": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "paths": {},
  },
  "include": ["./*.js", "src/**/*.ts"],
  "exclude": ["node_modules"]
}